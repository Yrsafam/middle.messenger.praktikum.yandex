<label class="avatar-profile">
    <input type="file" name="avatar" class="avatar-profile__input" accept="image/png, image/jpeg">
    {{#if avatar}}
        <img src="{{avatar}}" alt="Аватар" class="avatar-profile__icon">
    {{else}}
        <img src="/images/plug-avatar.svg" alt="Заглушка аватара" class="avatar-profile__icon">
    {{/if}}
    <span class="avatar-profile__description">
        Поменять <br> аватар
    </span>
</label>
