{{#> root title="Изменить пароль" className="profile-edit"}}
    {{#> sidebar className="profile__sidebar" href="profile.html"}}
        <section class="profile-edit__content">
            <div class="profile-edit__header">
                {{> "AvatarProfile/avatarProfile"}}
            </div>
            <form class="profile-edit__body">
                {{> "Input/input" name="password" label="Старый пароль" type="password" className="profile-edit__input"}}
                {{> "Input/input" name="new_password" label="Новый пароль" type="password" className="profile-edit__input"}}
                {{> "Input/input" name="repeat_password" label="Повторите новый пароль" type="password" className="profile-edit__input"}}
                {{> "Button/button" title="Сохранить" className="profile-edit__button" type="button"}}
            </form>
        </section>
    {{/sidebar}}
{{/root}}
