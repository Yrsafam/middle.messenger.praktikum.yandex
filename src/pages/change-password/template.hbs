<main class="profile-edit">
    {{# SidebarLayout className="profile__sidebar" href="profile.html"}}
        <section class="profile-edit__content">
            <div class="profile-edit__header">
                {{{ AvatarProfile }}}
            </div>
            {{# ForwardRefForm ref="form" className="profile-edit__body"}}
                {{{ Input
                        name="password"
                        ref="password"
                        label="Старый пароль"
                        type="password"
                        className="profile-edit__input"
                        errorText=errorsValidation.password
                        value=values.password
                        onChange=handlersChange.password
                        onBlur=handlersBlur.password
                }}}
                {{{ Input
                        name="new_password"
                        ref="new_password"
                        label="Новый пароль"
                        type="password"
                        className="profile-edit__input"
                        errorText=errorsValidation.new_password
                        value=values.new_password
                        onChange=handlersChange.new_password
                        onBlur=handlersBlur.new_password
                }}}
                {{{ Input
                        name="repeat_password"
                        ref="repeat_password"
                        label="Повторите новый пароль"
                        type="password"
                        className="profile-edit__input"
                        errorText=errorsValidation.repeat_password
                        value=values.repeat_password
                        onChange=handlersChange.repeat_password
                        onBlur=handlersBlur.repeat_password
                }}}
                {{{ Button title="Сохранить" className="profile-edit__button" type="button" onClick=onClick}}}
            {{/ ForwardRefForm}}
        </section>
    {{/SidebarLayout}}
</main>
