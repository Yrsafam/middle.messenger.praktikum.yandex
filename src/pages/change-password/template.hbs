<main class="profile-edit">
    {{# SidebarLayout className="profile__sidebar" href="profile.html"}}
        <section class="profile-edit__content">
            <div class="profile-edit__header">
                {{{ AvatarProfile }}}
            </div>
            <form class="profile-edit__body">
                {{{ Input name="password" label="Старый пароль" type="password" className="profile-edit__input"}}}
                {{{ Input name="new_password" label="Новый пароль" type="password" className="profile-edit__input"}}}
                {{{ Input name="repeat_password" label="Повторите новый пароль" type="password"
                          className="profile-edit__input"}}}
                {{{ Button title="Сохранить" className="profile-edit__button" type="button"}}}
            </form>
        </section>
    {{/SidebarLayout}}
</main>
