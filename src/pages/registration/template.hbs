<main class="registration">
    <form class="registration__form">
        <h3 class="registration__title">Регистрация</h3>

        <fieldset class="registration__form-group">
            {{{ Input name="email" label="Почта" type="email" className="registration__input" }}}
            {{{ Input name="login" label="Логин" type="text" className="registration__input" }}}
            {{{ Input name="first_name" label="Имя" type="text" className="registration__input" }}}
            {{{ Input name="second_name" label="Фамилия" type="text" className="registration__input" }}}
            {{{ Input name="phone" label="Телефон" type="tel" className="registration__input" }}}
            {{{ Input name="password" label="Пароль" type="password" className="registration__input" }}}
            {{{ Input name="password_repeat" label="Повторить пароль" type="password" className="registration__input"
                      errorText="Пароли не совпадают" }}}
        </fieldset>

        <div class="registration__buttons">
            {{{ Button title="Зарегистрироваться" type="submit" className="registration__submit" }}}
            {{{ ButtonText title="Есть аккаунт?" href="./authorization.html"
                           className="registration__authorization-button" }}}
        </div>
    </form>
</main>
